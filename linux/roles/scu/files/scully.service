[Unit]
Description=Scully service
After=docker-login.service set-audio-mode.service network-online.target
Wants=docker-login.service network-online.target
Requires=set-audio-mode.service
StartLimitIntervalSec=0

[Service]
Type=oneshot
RemainAfterExit=yes
TimeoutStartSec=0
Restart=on-failure
RestartSec=10
ExecStart=/root/run-scully up
ExecReload=/root/run-scully up
ExecStop=/root/run-scully down

[Install]
WantedBy=default.target
